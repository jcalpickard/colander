{
    "manifest_version": 2,
    "name": "Colander",
    "version": "1.0",
    "description": "Grabs information from multiple tabs",
    "icons": {
      "48": "icons/icon.png"
    },
    "permissions": [
      "tabs",
      "nativeMessaging"
    ],
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "Colander",
      "default_popup": "popup/popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "colander@justinpickard.net"
      }
    }
}